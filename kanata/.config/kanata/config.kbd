(defalias
  escctrl (tap-hold 90 100 esc lctl)
  fnhold  (layer-while-held fn)
)

(defsrc
  f1 f2 f3 f4 f5 f6 f7 f8 f9 f10 f11 f12
  ralt
  caps
)

(deflayer base
  brdn brup _ _ _ _ prev pp next mute vold volu
  @fnhold
  @escctrl
)

(deflayer fn
  f1 f2 f3 f4 f5 f6 f7 f8 f9 f10 f11 f12
  @fnhold
  @escctrl
)
